# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO - BACKEND
# ===========================================
# IMPORTANTE: Substitua todos os valores "your-xxx" pelos valores reais
# NUNCA commite este arquivo no Git!

# =====================
# DATABASE (Supabase)
# =====================
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# =====================
# JWT AUTHENTICATION
# =====================
# OBRIGATÓRIO: Gere uma chave segura com: openssl rand -base64 32
JWT_SECRET="GERE_UMA_CHAVE_SEGURA_COM_PELO_MENOS_32_CARACTERES"
JWT_EXPIRES_IN="7d"

# =====================
# SERVER
# =====================
PORT=5000
NODE_ENV="production"
API_URL="https://api.seu-dominio.com"
FRONTEND_URL="https://seu-dominio.com"

# =====================
# CORS (Domínios permitidos)
# =====================
CORS_ORIGINS="https://seu-dominio.com,https://www.seu-dominio.com"

# =====================
# RATE LIMITING
# =====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================
# MERCADO PAGO
# =====================
# Obter em: https://www.mercadopago.com.br/developers/panel/app
# USAR CREDENCIAIS DE PRODUÇÃO (não sandbox!)
MERCADOPAGO_ACCESS_TOKEN="APP_USR-xxxx-production-token"
MERCADOPAGO_PUBLIC_KEY="APP_USR-xxxx-public-key"
MERCADO_PAGO_WEBHOOK_SECRET="your-webhook-secret"
MERCADO_PAGO_ENVIRONMENT="production"

# =====================
# MELHOR ENVIO
# =====================
# Obter em: https://melhorenvio.com.br/painel/gerenciar/tokens
MELHOR_ENVIO_TOKEN="your-melhor-envio-production-token"
MELHOR_ENVIO_FROM_ZIP="01310100"
MELHOR_ENVIO_ENVIRONMENT="production"

# =====================
# EMAIL (SendGrid recomendado)
# =====================
# Obter em: https://sendgrid.com/
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASS="SG.xxx-your-sendgrid-api-key"
EMAIL_FROM="noreply@seu-dominio.com"
ADMIN_EMAIL="contato@seu-dominio.com"

# =====================
# CLOUDINARY (Imagens)
# =====================
# Obter em: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# =====================
# REDIS (Opcional - Cache)
# =====================
# Usar se precisar de cache
# REDIS_URL="redis://default:password@your-redis-host:6379"

# =====================
# SENTRY (Monitoramento de Erros)
# =====================
# Obter em: https://sentry.io/
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# =====================
# SEGURANÇA
# =====================
BCRYPT_ROUNDS=12
SESSION_SECRET="GERE_OUTRA_CHAVE_SEGURA_DIFERENTE_DO_JWT"

# =====================
# WEBHOOKS
# =====================
WEBHOOK_BASE_URL="https://api.seu-dominio.com/api/webhooks"
