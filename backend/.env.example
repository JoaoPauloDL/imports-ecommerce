# Configurações de Ambiente - Backend

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/imports_store"

# JWT Secrets
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# CORS Origins (comma separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="imports-store-images"
AWS_S3_URL="https://your-bucket.s3.amazonaws.com"

# Cloudinary Alternative (choose one)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Mercado Pago Integration
MERCADO_PAGO_ACCESS_TOKEN="your-mercado-pago-access-token"
MERCADO_PAGO_PUBLIC_KEY="your-mercado-pago-public-key"
MERCADO_PAGO_WEBHOOK_SECRET="your-webhook-secret"
MERCADO_PAGO_ENVIRONMENT="sandbox" # sandbox | production

# Melhor Envio Integration
MELHOR_ENVIO_TOKEN="your-melhor-envio-token"
MELHOR_ENVIO_ENVIRONMENT="sandbox" # sandbox | production
MELHOR_ENVIO_WEBHOOK_SECRET="your-melhor-envio-webhook-secret"

# Correios Integration
CORREIOS_USERNAME="your-correios-username"
CORREIOS_PASSWORD="your-correios-password"
CORREIOS_ENVIRONMENT="homologacao" # homologacao | producao

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@importsstore.com"
FROM_NAME="Imports Store"

# Email Configuration (SMTP Alternative)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis Configuration (optional for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Sentry for Error Monitoring
SENTRY_DSN="your-sentry-dsn"

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Encryption Salt Rounds
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET="your-session-secret-key"

# Webhook URLs
WEBHOOK_BASE_URL="https://your-api.com/api/webhooks"

# Logging Configuration
LOG_LEVEL="info" # error | warn | info | debug
LOG_FILE_PATH="./logs/app.log"

# Cache TTL (in seconds)
CACHE_TTL_PRODUCTS=3600 # 1 hour
CACHE_TTL_CATEGORIES=86400 # 24 hours
CACHE_TTL_SHIPPING=1800 # 30 minutes

# Business Rules
DEFAULT_SHIPPING_DAYS=7
MIN_ORDER_VALUE=50.00
FREE_SHIPPING_MIN_VALUE=200.00

# Tax Configuration
DEFAULT_TAX_RATE=0.0 # 0% for imported products may vary

# Company Information
COMPANY_NAME="Imports Store"
COMPANY_DOCUMENT="00.000.000/0001-00"
COMPANY_ADDRESS="Rua Example, 123, São Paulo, SP"
COMPANY_PHONE="+55 11 9999-9999"
COMPANY_EMAIL="contato@importsstore.com"