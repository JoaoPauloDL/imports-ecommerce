# Configurações de Ambiente - Frontend

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_API_TIMEOUT=30000

# App Configuration
NEXT_PUBLIC_APP_NAME="Imports Store"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# Mercado Pago Public Key
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=000000000000000

# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,your-bucket.s3.amazonaws.com,res.cloudinary.com
NEXT_PUBLIC_IMAGE_QUALITY=80

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_WISHLIST=false
NEXT_PUBLIC_ENABLE_REVIEWS=false

# Social Media Links
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/importsstore
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/importsstore
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/importsstore
NEXT_PUBLIC_WHATSAPP_NUMBER=5511999999999

# Company Information
NEXT_PUBLIC_COMPANY_NAME="Imports Store"
NEXT_PUBLIC_COMPANY_EMAIL=contato@importsstore.com
NEXT_PUBLIC_COMPANY_PHONE="+55 11 9999-9999"
NEXT_PUBLIC_COMPANY_ADDRESS="São Paulo, SP"

# SEO Configuration
NEXT_PUBLIC_DEFAULT_TITLE="Imports Store - Produtos Importados"
NEXT_PUBLIC_DEFAULT_DESCRIPTION="Os melhores produtos importados com entrega em todo o Brasil"
NEXT_PUBLIC_DEFAULT_KEYWORDS="produtos importados,eletrônicos,gadgets,brasil"

# Currency Configuration
NEXT_PUBLIC_CURRENCY=BRL
NEXT_PUBLIC_LOCALE=pt-BR

# Shipping Configuration
NEXT_PUBLIC_FREE_SHIPPING_MIN_VALUE=200.00
NEXT_PUBLIC_DEFAULT_SHIPPING_DAYS=7

# Map Configuration (for store locator if needed)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Chat/Support Configuration
NEXT_PUBLIC_CRISP_WEBSITE_ID=your-crisp-website-id
NEXT_PUBLIC_ZENDESK_KEY=your-zendesk-key

# Push Notifications (OneSignal)
NEXT_PUBLIC_ONESIGNAL_APP_ID=your-onesignal-app-id

# Recaptcha
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Development Configuration
NEXT_PUBLIC_NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true